<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">
    <TextView android:id="@+id/textViewLocalPort" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/localPort"></TextView>

    <EditText
        android:id="@+id/editTextLocalPort"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:text="5006" >

</EditText>
    
    <TextView android:id="@+id/textViewIp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/ip_address"></TextView>

    <EditText
        android:id="@+id/editTextIp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="255.255.255.255" >

        <requestFocus></requestFocus>
    </EditText>
    <TextView android:id="@+id/textViewPorta" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/port"></TextView>

    <EditText
        android:id="@+id/editTextPorta"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:inputType="number"
        android:text="5001" >

</EditText>
    <TextView android:id="@+id/textViewPayload" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/payload"></TextView>

    <EditText
        android:id="@+id/editTextPayload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hello Tom Xue!" >
</EditText>
    <Button android:layout_height="wrap_content" android:layout_gravity="right" android:text="@string/send" android:id="@+id/buttonSend" android:layout_weight="0.04" android:layout_width="100dp"></Button>

    <EditText
        android:id="@+id/RecvText"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:ems="10"
        android:text="..." />

</LinearLayout>
