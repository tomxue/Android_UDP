<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <TextView
        android:id="@+id/textViewLocalPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/localPort"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/editTextLocalPort"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="5001" />

    <TextView
        android:id="@+id/textViewIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ip_address"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/editTextIp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="255.255.255.255" >
    </EditText>

    <TextView
        android:id="@+id/textViewPorta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/port"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/editTextPorta"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:inputType="number"
        android:text="5001" >
    </EditText>

    <TextView
        android:id="@+id/textViewPayload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payload"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/editTextPayload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hello Tom Xue!" >
    </EditText>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="@string/send" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReceivedText"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay" >

        <EditText
            android:id="@+id/RecvText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp" >

        </EditText>

    </ScrollView>

</LinearLayout>